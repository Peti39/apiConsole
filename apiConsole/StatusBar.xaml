<UserControl x:Class="apiConsole.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Height="25"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#eee" Margin="0">
		<TextBlock x:Name="txtCount" VerticalAlignment="Center" Margin="10,0,0,0" />
		<TextBlock x:Name="txtStatus" HorizontalAlignment="Right" Margin="0,0,10,0"
				   FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
	</Grid>
</UserControl>

<Window x:Class="apiConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:apiConsole"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="450">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>

		<Menu Grid.Row="0">
			<MenuItem Header="Fájl">
				<MenuItem Header="Mentés" Click="mentesClick"></MenuItem>
				<MenuItem Header="Betöltés" Click="betoltesClick"/>
				<Separator/>
				<MenuItem Header="Kilépés" Click="kilepesClick"/>
				
			</MenuItem>
		</Menu>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
			<Label Content="Idő (s)" VerticalAlignment="Center"></Label>
			<TextBox x:Name="txtTime" Width="80" Margin="5,0"/>
			<Label Content="Sebesség (m/s)" VerticalAlignment="Center"></Label>
			<TextBox x:Name="txtSpeed" Width="80" Margin="5,0"/>
			<Button x:Name="btnAdd" Content="Hozzáad" Margin="10,0" Click="btnAdd_Click"/>
		</StackPanel>

		<ListBox x:Name="listBox" Grid.Row="2" FontSize="13" Margin="0,0,0,10"/>

		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Stretch">
			<Button x:Name="btnDelete" Content="Törlés" Width="80" Margin="0,0,10,0" Click="deleteClick"/>
			<Button x:Name="btnDiagaram" Content="Diagram" Width="80" Margin="0,0,10,0" Click="diagramClick"/>
		</StackPanel>
		<local:StatusBar x:Name="statusBar" Grid.Row="4" Margin="0,10,0,0"/>
	</Grid>
</Window>
